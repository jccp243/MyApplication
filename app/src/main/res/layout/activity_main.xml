<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorForo"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.juliocalderon.myapplication.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/community_icon"
        android:layout_marginTop="32dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_gmail"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <com.facebook.login.widget.LoginButton
        android:id='@+id/loginFacebook'
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:textColor="@color/com_facebook_button_background_color_focused"
        android:layout_marginTop="26dp"
        android:textSize="20sp"
        android:layout_below="@+id/sign_in_gmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

</RelativeLayout>
